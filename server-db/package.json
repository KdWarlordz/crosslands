{
  "name": "crosslands-service",
  "version": "1.0.0",
  "description": "Service for the Crosslands project",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "build": "yarn build:ts && yarn build:copy",
    "build:ts": "tsc",
    "build:copy": "copyfiles \"openapi.yaml\" dist",
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch dist --exec node dist/server.js\" \"yarn watch:copy\"",
    "watch:copy": "chokidar \"openapi.yaml\" -c \"copyfiles 'openapi.yaml' dist\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "axios": "^1.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-openapi-validator": "^5.1.6",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^20.11.17",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "mongoose": "^6.0.14",
    "nodemon": "^3.0.1",
    "typescript": "^5.3.3"
  },
  "author": {
    "name": "kdlabs",
    "email": "info@kdlabs.com",
    "url": "http://www.x.com/kdlabs"
  },
  "license": "GPL-3.0"
}
